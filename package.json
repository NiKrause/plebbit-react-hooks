{
  "name": "@plebbit/plebbit-react-hooks",
  "engines": {
    "node": "^14 || ^16"
  },
  "keywords": [
    "plebbit",
    "subplebbit"
  ],
  "repository": "github:plebbit/plebbit-react-hooks",
  "license": "GPL-2.0",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --project config/tsconfig.json",
    "start": "tsc --project config/tsconfig.json --watch",
    "prettier": "prettier {src,test,config}/**/*.{cjs,js,jsx,ts,tsx} --config config/prettier.config.js --write",
    "test": "jest --config config/jest.config.cjs"
  },
  "dependencies": {
    "@types/debug": "4.1.7",
    "@types/uuid": "8.3.4",
    "assert": "2.0.0",
    "debug": "4.3.3",
    "localforage": "1.10.0",
    "uuid": "8.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.2",
    "@tsconfig/recommended": "1.0.1",
    "@types/jest": "27.0.2",
    "@types/node": "16.9.0",
    "@types/react": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "husky": "8.0.1",
    "jest": "27.2.4",
    "lint-staged": "12.4.1",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "{src,test,config}/**/*.{cjs,js,jsx,ts,tsx}": [
      "prettier --write --config config/prettier.config.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
